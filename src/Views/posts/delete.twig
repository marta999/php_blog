{# Delete action template for Posts controller #}
{% extends 'base.twig' %}

{% block title %}{{ 'Delete post'|trans }}{% endblock %}

{% block heading %}{{ 'Delete post'|trans }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="text-center">
                <p>  {{ 'Do you really want to delete this'|trans }}?</p>
                <form action="{{ url('post_delete', {'id' : post.id}) }}" method="post">
                    {{ form_widget(form) }}
                </form>
            </div>
        </div>
    </div>

{% endblock %}