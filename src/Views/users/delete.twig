{# Delete action template for Users controller #}
{% extends 'base.twig' %}

{% block title %}{{ 'Remove user'|trans }}{% endblock %}

{% block heading %}{{ 'Remove user'|trans }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="text-center">
                <p>  {{ 'Do you really want to delete this user'|trans }}?</p>
                <form action="{{ url('users_delete', {'id' : user.id}) }}" method="post">
                    {{ form_widget(form) }}
                </form>
            </div>
        </div>
    </div>

{% endblock %}